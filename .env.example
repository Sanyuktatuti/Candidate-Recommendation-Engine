# Copy this file to .env and add your actual API keys
# API Keys (all optional - app works without them using intelligent fallback)
OPENAI_API_KEY=your_openai_api_key_here
COHERE_API_KEY=your_cohere_api_key_here
HF_API_TOKEN=your_hf_api_key_here

# AI Model Configuration (optional - sensible defaults provided)
# OpenAI Settings
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=300
OPENAI_TOP_P=1.0
OPENAI_FREQUENCY_PENALTY=0.0
OPENAI_PRESENCE_PENALTY=0.0

# Cohere Settings
COHERE_MODEL=command-r
COHERE_TEMPERATURE=0.6
COHERE_MAX_TOKENS=250
COHERE_TOP_P=0.9
COHERE_FREQUENCY_PENALTY=0.0
COHERE_PRESENCE_PENALTY=0.0

# Hugging Face Settings
HF_MODEL=microsoft/DialoGPT-medium
HF_TEMPERATURE=0.8
HF_MAX_TOKENS=200
HF_TOP_P=0.95
HF_FREQUENCY_PENALTY=0.0
HF_PRESENCE_PENALTY=0.0

# Prompt Configuration
PROMPT_SUMMARY_LENGTH=3
PROMPT_SUMMARY_TYPE=professional
PROMPT_INCLUDE_RISK=true
PII_PROTECTION_LEVEL=strict

# PII and Security Settings
ENABLE_PII_PROTECTION=true
LOG_PII_DETECTIONS=false

# Text Length Limits (characters)
MAX_INPUT_LENGTH=5000
MAX_RESUME_LENGTH=3000
MAX_JOB_DESC_LENGTH=2000

# Performance and Reliability
ANALYSIS_TIMEOUT=30
RETRY_ATTEMPTS=3
RETRY_DELAY=1.0
FALLBACK_ON_ERROR=true

# Application Settings (optional - with defaults)
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501
